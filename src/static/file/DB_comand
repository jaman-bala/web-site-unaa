sudo apt install postgresql postgresql-contrib
sudo -i -u postgres
psql
CREATE DATABASE password_db;
CREATE USER superuserdb WITH PASSWORD 'ZAQ12345tgb';
ALTER ROLE superuserdb SET client_encoding TO 'utf-8';
ALTER ROLE superuserdb SET default_transaction_isolation TO 'read committed';
ALTER ROLE superuserdb SET timezone TO 'Asia/Bishkek';
GRANT ALL PRIVILEGES ON DATABASE password_db TO superuserdb;



SETTINGS Django setting.py
DATABASES = {
    'default': {
        'ENGINE': 'django.db.backends.postgresql_psycopg2',
        'NAME': os.getenv("POSTGRES_DB",default='bachchai_db'),
        'USER' : os.getenv("POSTGRES_USER",default='bach_user'),
        'PASSWORD' : os.getenv("POSTGRES_PASSWORD",default='bachchai2022'),
        'HOST' : os.getenv("POSTGRES_HOST",default='127.0.0.1'),
        'PORT' : os.getenv("POSTGRES_PORT", default='5432'),
    }
}


